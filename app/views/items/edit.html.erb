<div class="container">
  <div class="row">
    <div class="col-6">
      <img src= <%= @item.image_url %> alt="img">
    </div>
    <div class="col-6">
      <%= simple_form_for [@item.user, @item] do |f| %>
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :brand %>
      <%= f.input :size , collection: ['S','M','L','XL','Fluffy'], include_blank: false %>
      <%= f.input :categories , collection: ['Tops', 'Bottoms', 'Accessories', 'Bags'], include_blank: false %>
      <%= f.submit "Save changes", class: "btn btn-dark" %> <%= link_to "Back to listings", items_path, class: "btn btn-dark"  %>
      <% end %>
    </div>
  </div>
</div>

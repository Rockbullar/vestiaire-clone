<div class="d-flex">
<%= link_to 'Shirts', items_path(:name => 'shirt'), class:'mx-5 btn-primary btn' %>
<%= link_to 'Bags', items_path(:name => 'bag'), class:'mx-5 btn-primary btn' %>
<%= link_to 'Pants', items_path(:name => 'pant'), class:'mx-5 btn-primary btn' %>

</div>
<h1 class='border bg-light'>All Items</h1>
<div class="d-flex">
  <div class="container">
    <%= form_with path: items_path, method: :get do |form| %>
      <%= form.label :keyword, "Search by name:" %>
      <%= form.text_field :name %>
      <%= form.submit "Search" %>
    <% end %>
  </div>
  <div class="container">
    <ol>
      <% @items.each do |item| %>
        <li>
          <%= item.name %>
          <%= item.description %>
          <%= item.price %>
          <%= item.brand %>
          <%= item.is_sold ? "Sold" : "Not sold" %>
        </li>
      <% end %>
    </ol>
  </div>
</div>

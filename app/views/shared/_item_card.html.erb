<% @items.each do |item| %>
  <div class="card row border p-3 m-2">
    <div class="d-flex justify-content-center">
      <%= cl_image_tag item.image_url.key, height: 300, width: 400, crop: :fill %>
    </div>
    <div class="pl-3">
      <div>
        <strong><%= item.brand %></strong>
      </div>
      <div>
        <%= item.name %>
      </div>
      <div>
        Size <%= item.size %>
      </div>
      <div>
        <strong>$<%= item.price %></strong>
      </div>
      <div>
        <%= link_to "Details", item_path(item) %>
      </div>
      <%# hide add to cart button if item is already in cart  %>
    </div>
  </div>
<% end %>

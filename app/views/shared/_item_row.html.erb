<div class="row border p-2">
  <div class="col-sm">
    <p><%= item.name %></p>
  </div>
  <div class="col-sm">
    <p><%= item.brand %></p>
  </div>
  <div class="col-sm">
    <div class="d-flex">
      <p><%= item.price %></p>
      <% if cart_item.cart.status='active' %>
      <%= link_to '(X)', destroy_cart_item_path(cart_item), method: :delete, class: "ml-2" %>
      <% end %>
    </div>
  </div>
</div>
